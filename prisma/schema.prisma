generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Credential {
  id             Int     @id @default(autoincrement())
  credentialType Int?
  Proxy          Proxy[]
}

model CredentialProperties {
  id    Int
  name  String  @db.VarChar(20)
  value String? @db.VarChar(100)

  @@id([id, name])
}

model CredentialType {
  id   Int     @id
  name String? @db.VarChar(40)
}

model Proxy {
  uuid           String      @id @db.Uuid
  name           String?     @db.VarChar(20)
  endpoint       String?     @unique @db.VarChar(40)
  targetURL      String?     @db.VarChar(200)
  credential     Int?
  status         Int?
  lastModifiedOn DateTime?   @db.Timestamptz(6)
  lastModifiedBy String?     @db.VarChar(20)
  Credential     Credential? @relation(fields: [credential], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "credential_fk")
}

model User {
  email        String   @id
  username     String   @unique
  firstName    String   @db.VarChar(40)
  lastName     String   @db.VarChar(40)
  passwordHash String
  active       Boolean
  lastLoggedIn DateTime?
}
